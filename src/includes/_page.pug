doctype html
html(lang="ru")
    include _mixins
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        title= title || 'Page name'

        // Styles::Start
        include _loadCss
        // Styles::End

        // Fonts::Start
        include _loadFonts
        // Fonts::End

        // Yandex Map
        if yandexMap === true
            script(src="https://api-maps.yandex.ru/2.1/?apikey=39aa5abe-ec5b-45c6-9d35-323c61ba7263&lang=ru_RU")

    body(class= bodyClass ? bodyClass : '')

        #page.page
            // Header::Start
            block header
                include _header
            // Header::End

            // Main::Start
            main#main
                block main
            // Main::End

            // Footer::Start
            block footer
                include _footer
            // Footer::End

        // Popup::Start

        include ../components/_popup
        // Popup::End


        // Scripts::Start
        include _loadScripts
        // Scripts::End